<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <ImageView
            android:id="@+id/editPet_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="Name"
            android:textColor="#000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editPet_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-light"
            android:hint="enter text"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="Breed"
            android:textColor="#000"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/editPetBreed"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:entries="@array/Strain" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="Day of birth"
            android:textColor="#000"
            android:layout_marginTop="15dp"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/editDateDay"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:entries="@array/dayz"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="Month of birth"
            android:textColor="#000"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/editDateMonth"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:entries="@array/mothz" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="Year of birth"
            android:textColor="#000"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/editDateYear"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:entries="@array/yrs" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="Weight"
            android:layout_marginTop="15dp"
            android:textColor="#000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editPet_weight_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-light"
            android:hint="enter text"
            android:inputType="numberSigned"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="How often"
            android:textColor="#000"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/editPet_spinner_view"
            android:entries="@array/medsTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/editPet_sterilized_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/autour_one"
            android:text="Is your pet sterilised?"
            android:textSize="14sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/editPet_meds_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/autour_one"
            android:text="Is your pet taking any meds?"
            android:textSize="14sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/editPet_sex_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/autour_one"
            android:text="Is your pet a male?"
            android:textSize="14sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/editPet_dog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/autour_one"
            android:text="Is your pet a dog?"
            android:textSize="14sp" />

        <Button
            android:id="@+id/editPet_save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#DA8486"
            android:text="SAVE" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>