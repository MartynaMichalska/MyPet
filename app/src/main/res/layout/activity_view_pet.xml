<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <ImageView
            android:id="@+id/viewPet_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:padding="20dp"
            android:id="@+id/viewPet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="Name"
            android:textColor="#000"
            android:textSize="20sp"
            android:textAlignment="center"/>



        <TextView
            android:id="@+id/viewPet_type"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="Type"
            android:textColor="#000"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/viewPet_sex"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="Sex"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/viewPet_breed"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="Breed"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/viewPet_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="Weight"
            android:padding="20dp"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/viewPet_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="Age"
            android:padding="20dp"
            android:textColor="#000"
            android:textSize="12sp" />

        <android.widget.Button
            android:id="@+id/viewPet_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_bt"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/autour_one"
            android:text="DELETE" />
        <android.widget.Button
            android:id="@+id/viewPet_edit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_bt"
            android:textColor="@color/white"
            android:fontFamily="@font/autour_one"
            android:layout_marginTop="10dp"
            android:text="@string/edit" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>