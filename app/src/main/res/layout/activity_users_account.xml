<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userAccount">

    <Button
        android:id="@+id/showPetsButton"
        android:layout_width="156dp"
        android:layout_height="65dp"
        android:layout_marginStart="154dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="169dp"
        android:fontFamily="@font/autour_one"
        android:text="MY PETS"
        app:backgroundTint="#94EDA6A6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="141dp"
        android:layout_height="64dp"
        android:layout_marginTop="53dp"
        android:backgroundTint="#94EDA6A6"
        android:text="SIGN OUT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountManagementBt" />

    <Button
        android:id="@+id/callendarBt"
        android:layout_width="152dp"
        android:layout_height="64dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#DA8486"
        android:fontFamily="@font/autour_one"
        android:text="CALLENDAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showPetsButton" />

    <Button
        android:id="@+id/faqBt"
        android:layout_width="147dp"
        android:layout_height="59dp"
        android:layout_marginTop="63dp"
        android:backgroundTint="#94EDA6A6"
        android:fontFamily="@font/autour_one"
        android:text="FAQ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/callendarBt" />

    <Button
        android:id="@+id/accountManagementBt"
        android:layout_width="148dp"
        android:layout_height="57dp"
        android:layout_marginTop="49dp"
        android:backgroundTint="#DA8486"
        android:fontFamily="@font/autour_one"
        android:text="ACCOUNT MANAGMENT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faqBt" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/autour_one"
        android:text="MENU"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
